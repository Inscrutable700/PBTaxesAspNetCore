@if (Context.User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Account" asp-action="LogoutFromPB" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="LoginToPB">Войти</a></li>
    </ul>
}
